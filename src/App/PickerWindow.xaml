<Window x:Class="PopupGuard.PickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="取窗工具" WindowStyle="None" AllowsTransparency="True" Background="#80000000"
        Topmost="True" ShowInTaskbar="False" Width="240" Height="220" Opacity="1" Cursor="Cross">
    <Grid>
        <!-- 居中的准星圆环 -->
        <Grid Width="140" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Ellipse Width="140" Height="140" StrokeThickness="3">
                <Ellipse.Stroke>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFF5555" Offset="0"/>
                        <GradientStop Color="#FFCC3333" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Stroke>
            </Ellipse>
            <Ellipse Width="100" Height="100" Stroke="#40FFFFFF" StrokeDashArray="3 3" StrokeThickness="1"/>
            <Rectangle Width="2" Height="80" Fill="#FFFF5555" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Rectangle Width="80" Height="2" Fill="#FFFF5555" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse Width="6" Height="6" Fill="#FFFF5555" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Ellipse Width="140" Height="140">
                <Ellipse.Effect>
                    <DropShadowEffect Color="#FFFF5555" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                </Ellipse.Effect>
            </Ellipse>
        </Grid>

        <!-- 文本提示：白色半透明气泡 -->
        <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,12"
                Background="#F0FFFFFF" CornerRadius="10" Padding="14,8" Opacity="0.95">
            <TextBlock Text="左键选择窗口，右键取消"
                       Foreground="#333333" FontSize="13" TextWrapping="Wrap" TextTrimming="None" MaxWidth="220"/>
        </Border>
    </Grid>
</Window>


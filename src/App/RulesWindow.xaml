<Window x:Class="PopupGuard.RulesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="规则" Height="360" Width="640">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="BlockedList" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="解除屏蔽" Margin="0,8,8,0" Click="OnUnblockClick"/>
            <Button Content="关闭" Margin="0,8,0,0" Click="OnCloseClick"/>
        </StackPanel>
    </Grid>
</Window>


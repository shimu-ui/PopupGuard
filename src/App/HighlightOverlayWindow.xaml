<Window x:Class="PopupGuard.HighlightOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" WindowStyle="None" AllowsTransparency="True" Background="#00FFFFFF"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize"
        IsHitTestVisible="False">
    <Canvas x:Name="RootCanvas" Background="#00FFFFFF">
        <Rectangle x:Name="HighlightRect" Width="0" Height="0"
                   StrokeThickness="3" Stroke="#40FF66" Fill="#00000000"
                   StrokeDashArray="4 2" RadiusX="2" RadiusY="2"/>
    </Canvas>
</Window>


